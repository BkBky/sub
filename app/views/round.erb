<div class="container">
  <h2>Welcome <%= @user.name %></h2>
</div>

<h1>Your Score by Rounds</h1>

<div class="centerTable">
	<% if @rounds.count != 0 %>
		<table class="hovertable">
			<!-- ¿Qué va en esta parte para llevar la puntuación por round del jugador? -->
	      <tr>
             <th>Round</th>
             <th>Destroyed submarines</th> 
             <th>Result</th>
          </tr>
        <% @rounds.each do |game| %>
          <tr>
             <td><%= game.id %></td>
             <td><%= game.destroyed_sub %></td>
             <td><%= game.result %></td>
          </tr>

         <% end %>
			
		</table>
	<% else %>
	  <h3>No rounds for this player!</h3>
	<% end %>
 <h3>Games Won: <%= @rounds.where(result: "Winner!").count %></h3>
</div>

<aside>
  <h3></h3>

  <form method="post" action="/new_game">
    <input type="submit" value="Play Again">
  </form>
</aside>